<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:stretchColumns="3">

    <TableRow>
        <TextView
            android:id="@+id/titleCollum1"
            android:text="Balance (USD)"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:paddingVertical="8dip"
            android:paddingHorizontal="16dip"/>

        <TextView
            android:id="@+id/titleCollum2"
            android:text="Transactions"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:paddingVertical="8dip"
            android:paddingHorizontal="16dip"/>

        <TextView
            android:id="@+id/titleCollum3"
            android:text="Wallets"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:gravity="center"
            android:paddingVertical="8dip"
            android:paddingHorizontal="16dip"/>
    </TableRow>

    <TableRow>
        <TextView
            android:id="@+id/textCollum1"
            android:text="$ 21 453"
            android:textSize="16sp"
            android:gravity="center"
            android:textColor="@color/yellow"
            android:textStyle="bold"
            android:paddingVertical="8dip"
            android:paddingHorizontal="16dip"/>

        <TextView
            android:id="@+id/textCollum2"
            android:text="6753"
            android:textSize="16sp"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:paddingVertical="8dip"
            android:paddingHorizontal="16dip"/>

        <TextView
            android:id="@+id/textCollum3"
            android:text="6"
            android:textSize="16sp"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:paddingVertical="8dip"
            android:paddingHorizontal="16dip"/>
    </TableRow>
</TableLayout>